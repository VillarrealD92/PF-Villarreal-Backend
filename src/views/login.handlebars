<main class="login-container animate__animated animate__fadeIn">
    <div class="logo-custom text-center mb-4">
        <img src="https://res.cloudinary.com/dhht1zszr/image/upload/v1711129174/logo_rduaco.svg" alt="Logo" class="login-logo">
        <h3>MundoCan</h3>
    </div>
    <h1 class="login-title">Step Inside <i class="fas fa-paw"></i> </h1>

    <form class="login-form" action="/api/session/login" method="post">
        <div class="form-group my-3">
            <label for="inputEmail">Email address</label>
            <input name="email" type="email" class="form-control" id="inputEmail" placeholder="Enter email"  required>
        </div>
        <div class="form-group my-3">
            <label for="inputPassword">Password</label>
            <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password"
                required>
        </div>

        <button type="submit" class="btn btn-primary btn-login my-3"> Login <i class="fas fa-dog"></i></button>

        <p class="forgot-password"><a href="/restablishPassword">Forgot your password?</a></p>
        <p class="register-link"><a href="/register">Don't have an account yet?</a></p>
    </form>

    <div class="github-login text-center">
        <button class="btn btn-dark btn-github"><a href="/api/session/github" class="text-decoration-none text-light"><i
                    class="fab fa-github"></i> Login with GitHub</a></button>
    </div>

    <div class="google-login text-center">
        <button class="btn btn-danger btn-google"><a href="/api/session/google" class="text-decoration-none text-light"><i
                    class="fab fa-google"></i> Login with Google</a></button>
    </div>
</main>

<script src="/static/js/login.js"></script>